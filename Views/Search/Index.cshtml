@using MyFilms.Models.APIModels;
<div class="container">
    <div class="row">
        @foreach (var release in ViewData["Result"] as List<ReleaseShort>)
        {
            <div class="card">
                <div class="row g-0">
                    <div class="col">
                        <img src="@release.PreviewPosterLink" class="rounded d-block img-fluid mx-auto align-baseline" />
                    </div>
                    <div class="col-md-10">
                        <div class="card-body">
                            <a class="link-dark h4" href="/Release?Id=@release.Id">@release.Name</a>
                            <div>@release.Year</div>
                            <div>@release.Type</div>
                            <div>Рейтинг КП: @release.KpRating</div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>