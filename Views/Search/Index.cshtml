@using MyFilms.Models.APIModels;
<h4>Результаты по запросу: @ViewData["SearchString"]</h4>
<div class="py-4">
@foreach (var release in ViewData["Result"] as List<ReleaseShort>)
{
    <div class="card">
        <div class="row g-0">
            <div class="col-md-2">
                <img src="@release.PreviewPosterLink" class="rounded-start img-fluid"/>
            </div>
            <div class="col-md-10">
                <div class="card-body">
                    <a class="link-dark h4 stretched-link" href="/Release?Id=@release.Id">@release.Name</a>
                    <div>@release.Year</div>
                    <div>@release.Type</div>
                    <div>Рейтинг КП: @release.KpRating</div>
                </div>
            </div>
        </div>
    </div>
}
</div>