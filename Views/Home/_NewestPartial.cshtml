@using MyFilms.Models.APIModels;
<a class="link-dark h4 py-4" asp-area="" asp-controller="Home" asp-action="Newest">Новое</a>
<div class="container py-4">
    <div class="card-group">
        @foreach(var release in ViewData["Newest"] as List<ReleaseShort>)
        {
            <div class="card">
                <img src="@release.PreviewPosterLink" class="rounded mx-auto d-block img-fluid" />
                <div class="card-header">
                    <a class="link-dark stretched-link h4" href="/Release?Id=@release.Id">@release.Name</a>
                </div>
                <div class="card-body">
                    <div>@release.Year</div>
                    <div>@release.Type</div>
                    <div>Рейтинг КП: @release.KpRating</div>
                </div>
            </div>
        }
    </div>
</div>